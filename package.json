{
  "name": "portal",
  "version": "0.0.1",
  "description": "Portal",
  "main": "app.js",
  "dependencies": {
    "async": "^3.1.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "bower": "^1.8.8",
    "browser-sync": "^2.26.7",
    "buefy": "^0.8.8",
    "chalk": "^3.0.0",
    "cheerio": "^1.0.0-rc.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.0",
    "express-validator": "^6.3.0",
    "express-vue": "^5.14.1",
    "fs": "0.0.1-security",
    "lob": "^6.0.6",
    "lodash": "^4.17.15",
    "lusca": "^1.6.1",
    "mongoose": "^5.8.3",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.2",
    "nodemailer-smtp-transport": "^2.7.4",
    "request": "^2.88.0",
    "serve-favicon": "^2.5.0",
    "validator": "^12.1.0"
  },
  "scripts": {
    "build-css": "node-sass src/scss/style.scss -o src/css/",
    "clean": "rm static/css/style.css",
    "css": "postcss src/css/*.css --dir static/css --config configs/postcss.js",
    "min-css": "postcss --use autoprefixer -b 'last 2 versions' < src/css/style.css | postcss --use cssnano > static/css/style.min.css",
    "build": "npm run build-css && npm run min-css",
    "start": "node app",
    "test": "mocha -R spec",
    "watch-sass": "nodemon -e scss --watch src/scss -x \"npm run build\"",
    "watch": "npm run watch-sass"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:crazyonezoe/portal.git"
  },
  "author": "Zoe Ponsler",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "postcss": "^7.0.25",
    "postcss-cli": "^6.1.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "webpack": "^4.41.4"
  }
